{%  extends 'base.html.twig' %}

    {% block title %} {{ post.title }} {% endblock %}
    {% block body %}
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-6 mx-auto">
                    <div class="card bg-light rounded">
                        <h class="container-fluid">
                            <h3 class="card-title text-default p-4">
                                Articles
                            </h3>
                            <div class="card-body mt-2 rounded">
                                    <div class="media">
                                        <img src="https://picsum.photos/400/400" class="mr3">
                                        <div clas="media-body">
                                            <h5 class="mt-0">
                                                {{ post.title }}
                                            </h5>
                                            {{ post.body }}
                                        </div>
                                    </div>
                                    <hr/>
                            </div>
                        </h>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}